              -DNXAGENT_GLYPHCACHE_SIZE=50		\
              -DNXAGENT_SHAPE2				\
              -DNXAGENT_FIXKEYS				\
              -DNXAGENT_CLIPBOARD			\
              -DNXAGENT_EXPOSURES			\
