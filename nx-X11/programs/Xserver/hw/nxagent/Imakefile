VFBINCLUDES = -I../../fb -I../../mfb -I../../render
NXFONTINCLUDES = -I../../../../lib/font/include
LIBXRANDRINCLUDES= -I../../../../lib/Xrandr

INCLUDES = -I. -I../../../../../nxcomp -I../../../../../nxcompext -I../../../../../nxcompshad \
           -I../../../../extras/Mesa/include \
	   -I$(XBUILDINCDIR) -I$(FONTINCSRC) \
