        -DNXAGENT_RENDER_CLEANUP \
        -DNXAGENT_SHAPE2 \
        -DNXAGENT_FIXKEYS \
        -DNXAGENT_CLIPBOARD \
        -DNXAGENT_WAKEUP=1000 \
        -DNXAGENT_ONSTART \
        -DNXAGENT_ARTSD \
        -UNX_DEBUG_INPUT \
        -DRANDR_10_INTERFACE=1 \
        -DRANDR_12_INTERFACE=1 \
        -DRANDR_13_INTERFACE=1 \
        -DRANDR_14_INTERFACE=1 \
        -DRANDR_15_INTERFACE=1 \
