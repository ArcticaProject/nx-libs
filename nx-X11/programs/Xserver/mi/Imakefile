NULL =

#include <Server.tmpl>

#if ! HasCbrt
CBRT_SRC = cbrt.c
CBRT_OBJ = cbrt.o
#endif

#if HasFfs
FFS_DEFINES = -DHAS_FFS
#endif

MIINITEXTSRC = miinitext.c
MIINITEXTOBJ = miinitext.o

#if (!(defined(NXAgentServer) && NXAgentServer))
NXAGENT_SKIP_SRCS =                     \
                    miexpose.c          \
                    $(NULL)
NXAGENT_SKIP_OBJS =                     \
                    miexpose.o          \
                    $(NULL)
#endif

SRCS =  $(CBRT_SRC)             \
        mivaltree.c             \
        mipolyseg.c             \
        mipolyrect.c            \
        mipoly.c                \
        mipolycon.c             \
