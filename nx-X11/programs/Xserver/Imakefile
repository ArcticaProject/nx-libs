NXWIN = NXWin
#endif
#if (defined(NXAgentServer) && NXAgentServer) || \
    (!MakeDllModules && defined(NXWinServer) && NXWinServer) 
MakeMutex($(NXAGENT) $(NXWIN))
#endif
MakeMutex($(STDDIRS) mfb fb cfb cfb16 cfb24 cfb32)
#endif


