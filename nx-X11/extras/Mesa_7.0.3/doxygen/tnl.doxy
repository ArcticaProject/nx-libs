#---------------------------------------------------------------------------
TAGFILES               = tnl_dd.tag=../tnl \
                         main.tag=../core \
                         math.tag=../math \
                         shader.tag=../shader \
                         swrast.tag=../swrast \
                         swrast_setup.tag=swrast_setup \
                         vbo.tag=vbo
