+		-1,			// The string is NULL terminated
+		res,			// Output buffer
+		res_len			// buffer size
+		);
+	if (err == 0)
+	{
+//		printf("Failed to convert to unicode\n");
+		free(res);
+		return NULL;
+	}
+	return res;
